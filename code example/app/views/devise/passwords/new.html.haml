:ruby
  set_meta_tags(title: 'Reset password')

.login-cover
  .login-cover-image{"data-id" => "login-cover-image", :style => "background-image: url(#{asset_path("devise/#{rand(10)}.jpg")})"}
  .login-cover-bg
#page-container
  .login.login-v2{"data-pageload-addclass" => "animated fadeIn"}
    .login-header
      .brand
        = image_tag 'logo.png', alt: 'logo', height: 50

        Password
        %small Restore your The SMM Tools Password.
    .login-content
      = form_for(resource, as: resource_name, url: password_path(resource_name), class: 'margin-bottom-0') do |f|
        = render "devise/shared/error_messages", resource: resource
        .form-group.m-b-20
          = f.email_field :email, autocomplete: "email", class: 'form-control form-control-lg', placeholder: 'Email Address'
        .login-buttons
          = f.submit 'Reset password', class: 'btn btn-success btn-block btn-lg'
        = render 'social_login', text: 'in'

        .m-t-30.m-b-30.p-b-30
          Want to Sign In?
          = link_to 'Click here to login.', new_user_session_path
