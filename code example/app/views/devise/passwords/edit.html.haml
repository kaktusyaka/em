.login-cover
  .login-cover-image{"data-id" => "login-cover-image", :style => "background-image: url(#{asset_path("devise/#{rand(10)}.jpg")})"}
  .login-cover-bg
#page-container
  .login.login-v2{"data-pageload-addclass" => "animated fadeIn"}
    .login-header
      .brand
        = image_tag 'logo.png', alt: 'logo', height: 50

        Password
        %small Change your The SMM Tools Password.
    .login-content
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'margin-bottom-0' }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .form-group.m-b-20
          = f.password_field :password, autocomplete: "new-password", autofocus: true, class: 'form-control form-control-lg', placeholder: 'New Password'
        .login-buttons
          = f.submit 'Change my password', class: 'btn btn-success btn-block btn-lg'
